{
  "name": "layout-task-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for layout tasks with visual regression testing",
  "main": "src/main.js",
  "scripts": {
    "start": "gulp",
    "build": "gulp build",
    "predeploy": "npm run build",
    "publish": "npm run deploy",
    "deploy": "gh-pages -d dist",
    "postinstall": "cp node_modules/@mate-academy/htmllint-config/.htmllintrc ./.linthtmlrc",
    "lint": "stylelint src/**/*.scss && eslint src/**/*.js && linthtml src/*.html"
  },
  "keywords": [],
  "author": "Mate Academy",
  "license": "GPL-3.0",
  "devDependencies": {
    "@linthtml/linthtml": "^0.3.2",
    "@mate-academy/browsersync-config": "*",
    "@mate-academy/eslint-config": "*",
    "@mate-academy/htmllint-config": "*",
    "@mate-academy/stylelint-config": "*",
    "@mate-academy/backstop-config": "*",
    "colors": "^1.3.3",
    "eslint": "^5.16.0",
    "eslint-plugin-node": "^8.0.1",
    "gh-pages": "2.0.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^6.0.0",
    "gulp-clean": "^0.4.0",
    "gulp-eslint": "^5.0.0",
    "gulp-htmllint": "0.0.16",
    "gulp-replace-path": "^0.4.0",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-stylelint": "^9.0.0",
    "browser-sync": "^2.1.6",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "stylelint": "^10.0.0",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-scss": "^3.6.1"
  },
  "lint-staged": {
    "linters": {
      "*.css": [
        "stylelint",
        "git add"
      ],
      "*.js": [
        "eslint",
        "git add"
      ],
      "*.html": [
        "linthtml",
        "git add"
      ]
    },
    "ignore": [
      "**/backstop_data/**",
      "**/report/**"
    ]
  },
  "husky": {
    "hooks": {
      "post-commit": "git update-index --again",
      "pre-commit": "lint-staged"
    }
  }
}
